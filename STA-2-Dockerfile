FROM "php:5.6.38-fpm-alpine3.8"
LABEL maintainer="yanguang.wang@nexusguard.com"

RUN apk add --no-cache --update \
            php5-wddx \
            php5-xmlrpc \
            php5-xsl \
            php5-zip \
            php5-bz2 \
            php5-gd \ 
            php5-gettext \
            php5-gmp \
            php5-soap \
            libmcrypt-dev \
            libmcrypt \
            openssl-dev \
        && apk add --no-cache --virtual .phpize_deps \
            $PHPIZE_DEPS \
            autoconf \
            libxml2-dev \
        && docker-php-ext-enable /usr/lib/php5/modules/wddx.so \ 
            /usr/lib/php5/modules/xmlrpc.so \ 
            /usr/lib/php5/modules/xsl.so \ 
#/usr/lib/php5/modules/zip.so \ 
            /usr/lib/php5/modules/bz2.so \ 
            /usr/lib/php5/modules/gd.so \ 
            /usr/lib/php5/modules/gettext.so \ 
            /usr/lib/php5/modules/gmp.so \
        && docker-php-ext-configure \
            mcrypt \
        && docker-php-ext-install \
            mcrypt \
            soap \
            bcmath \
            calendar \
            dba \
            exif \
            mysql \
            mysqli \
            pcntl \
            pdo_mysql \
            shmop \
            sockets \
            sysvmsg \
            sysvsem \
            sysvshm \
        && pecl install \
            redis-4.0.1 \
            igbinary \
            mongo \
        && docker-php-ext-enable \
            redis \
            igbinary \
            mongo \
        && apk del .phpize_deps

# Gearman
RUN apk --update add --no-cache -X 'http://dl-cdn.alpinelinux.org/alpine/edge/testing' gearman-dev \ 
    && pecl install gearman \
    && docker-php-ext-enable /usr/local/lib/php/extensions/no-debug-non-zts-20131226/gearman.so 

# Zip
RUN apk --update add --no-cache -X 'http://dl-cdn.alpinelinux.org/alpine/edge/main' libcrypto1.1 \
     && apk --update add --no-cache -X 'http://dl-cdn.alpinelinux.org/alpine/edge/community' libzip-dev \
     && pecl install zip \
     && docker-php-ext-enable zip

# rekafka
RUN apk --update add --no-cache -X 'http://dl-cdn.alpinelinux.org/alpine/edge/main' libcrypto1.1 \
     && apk —update add —no-cache -X 'http://dl-cdn.alpinelinux.org/alpine/edge/community' librdkafka-dev \
     && pecl install rdkafka \
     && docker-php-ext-enable rdkafka

# zookeeper  build pattern 
